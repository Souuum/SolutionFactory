// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// --------------------------------------

model User {
  id             Int         @id @default(autoincrement())
  email          String      @unique
  phone          String      @unique
  hashedPassword String
  role           String      @default("USER")
  lastName       String
  firstName      String
  gender         String
  birthDate      DateTime
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  patients       Patient?
  tokens         Token[]
  sessions       Session[]
  medecin        Medecin?
  pharmacien     Pharmacien?
}

model Patient {
  id             Int          @id @default(autoincrement())
  user           User         @relation(fields: [userId], references: [id])
  userId         Int          @unique
  groupe         Groupe       @relation(fields: [groupeId], references: [id])
  groupeId       Int
  securityNumber String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  ordonnance     Ordonnance[]
}

model Groupe {
  id        Int       @id @default(autoincrement())
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  tokens    Token[]
  patients  Patient[]
}

model Medecin {
  id          Int          @id @default(autoincrement())
  user        User         @relation(fields: [userId], references: [id])
  userId      Int          @unique
  rpps        String       @unique
  cabinet     String
  specialty   String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  ordonnances Ordonnance[]
}

model Pharmacien {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int      @unique
  rpps      String   @unique
  pharmacy  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Ordonnance {
  id            Int              @id @default(autoincrement())
  patient       Patient          @relation(fields: [patientId], references: [id])
  patientId     Int
  medecin       Medecin          @relation(fields: [createdBy], references: [id])
  createdBy     Int
  category      String
  expiration    DateTime
  prescriptions Prescription[]
  token         TokenOrdonnance?
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
}

model TokenOrdonnance {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  token     String
  type      String
  // See note below about TokenType enum
  // type        TokenType
  expiresAt DateTime
  sentTo    String

  ordonnance   Ordonnance? @relation(fields: [ordonnanceId], references: [id])
  ordonnanceId Int?        @unique

  @@unique([token, type])
}

model Drug {
  id               Int      @id @default(autoincrement())
  name             String
  stock            String?
  pharmaShape      String[]
  admWay           String
  ammStatus        String
  ammProcType      String
  commercial       String
  ammDate          DateTime
  bdmStatus        String
  euroAutorization String
  holder           String
  monitoring       String
}

model Prescription {
  id                Int        @id @default(autoincrement())
  ordonnance        Ordonnance @relation(fields: [ordonnanceId], references: [id])
  ordonnanceId      Int
  drug              String
  description       String
  morning           Int
  afternoon         Int
  evening           Int
  hasTakenMorning   Boolean    @default(false)
  hasTakenAfternoon Boolean    @default(false)
  hasTakenEvening   Boolean    @default(false)
  expirationTime    DateTime
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
}

model Session {
  id                 Int      @id @default(autoincrement())
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  expiresAt          DateTime
  handle             String   @unique
  hashedSessionToken String?
  antiCSRFToken      String?
  publicData         String?
  privateData        String?

  user   User? @relation(fields: [userId], references: [id])
  userId Int?
}

model Token {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  hashedToken String
  type        String
  // See note below about TokenType enum
  // type        TokenType
  expiresAt   DateTime
  sentTo      String

  user   User? @relation(fields: [userId], references: [id])
  userId Int?

  groupe   Groupe? @relation(fields: [groupeId], references: [id])
  groupeId Int?

  @@unique([hashedToken, type])
}

